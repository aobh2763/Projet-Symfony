{% extends 'base.html.twig' %}
{% block title %}
  Category - FashionStore Bootstrap Template
{% endblock %}
{% block body %}

<body class="category-page">

<header id="header" class="header position-relative">
  <!-- Top Bar -->
  {% include 'fragments/topbar.html.twig' %}

  <!-- Main Header -->
  {% include 'fragments/mainheader.html.twig' %}

  <!-- Navigation -->
  {% include 'fragments/navbar.html.twig' %}

  <!-- Announcement Bar -->
  {% include 'fragments/announcementbar.html.twig' %}

</header>

  <main class="main">

    <!-- Page Title -->
    <div class="page-title light-background">
      <div class="container">
        <nav class="breadcrumbs">
          <ol>
            <li><a href="{{ asset('index.html.twig') }}">Home</a></li>
            <li class="current">Category</li>
          </ol>
        </nav>
        <h1>Category</h1>
      </div>
    </div><!-- End Page Title -->

    <div class="container">
      <div class="row">

        <div class="col-lg-12">

          <!-- Category Header Section -->
          {% include 'fragments/For products/productsheader.html.twig' %}
          <!-- /Category Header Section -->

          <!-- Category Product List Section -->
          {% include 'fragments/For products/list.html.twig' %}
          <!-- /Category Product List Section -->

          <!-- Category Pagination Section -->
          <section id="category-pagination" class="category-pagination section">

          {% set pages = products|length // 9 %}
          {% if products|length % 9 != 0 %}
            {% set pages = pages + 1 %}
          {% endif %}

            <div class="container">
              <nav class="d-flex justify-content-center" aria-label="Page navigation">
                <ul>
                  <li>
                    {% if page != 1 %}
                    <a href="{{ path('app_products', {'page': page - 1}) }}" aria-label="Previous page">
                    {% else %}
                    <a href="{{ path('app_products', {'page': 1}) }}" aria-label="Previous page" class="disabled">
                    {% endif %}
                      <i class="bi bi-arrow-left"></i>
                      <span class="d-none d-sm-inline">Previous</span>
                    </a>
                  </li>

                  {% if pages > 7 %}
                    {% if page == 1 %}
                      <li><a href="{{ path('app_products', {'page': 1}) }}" class="active">1</a></li>
                      <li><a href="{{ path('app_products', {'page': 2}) }}">2</a></li>
                      <li><a href="{{ path('app_products', {'page': 3}) }}">3</a></li>
                      <li class="ellipsis">...</li>
                      <li><a href="{{ path('app_products', {'page': pages - 2}) }}">{{ pages - 2 }}</a></li>
                      <li><a href="{{ path('app_products', {'page': pages - 1}) }}">{{ pages - 1 }}</a></li>
                      <li><a href="{{ path('app_products', {'page': pages}) }}">{{ pages }}</a></li>
                    {% elseif page == 2 %}
                      <li><a href="{{ path('app_products', {'page': 1}) }}">1</a></li>
                      <li><a href="{{ path('app_products', {'page': 2}) }}" class="active">2</a></li>
                      <li><a href="{{ path('app_products', {'page': 3}) }}">3</a></li>
                      <li class="ellipsis">...</li>
                      <li><a href="{{ path('app_products', {'page': pages - 2}) }}">{{ pages - 2 }}</a></li>
                      <li><a href="{{ path('app_products', {'page': pages - 1}) }}">{{ pages - 1 }}</a></li>
                      <li><a href="{{ path('app_products', {'page': pages}) }}">{{ pages }}</a></li>
                    {% elseif page == 3 %}
                      <li><a href="{{ path('app_products', {'page': 1}) }}">1</a></li>
                      <li><a href="{{ path('app_products', {'page': 2}) }}">2</a></li>
                      <li><a href="{{ path('app_products', {'page': 3}) }}" class="active">3</a></li>
                      <li class="ellipsis">...</li>
                      <li><a href="{{ path('app_products', {'page': pages - 2}) }}">{{ pages - 2 }}</a></li>
                      <li><a href="{{ path('app_products', {'page': pages - 1}) }}">{{ pages - 1 }}</a></li>
                      <li><a href="{{ path('app_products', {'page': pages}) }}">{{ pages }}</a></li>
                    {% else %}
                      <li><a href="{{ path('app_products', {'page': 1}) }}">1</a></li>
                      <li><a href="{{ path('app_products', {'page': 2}) }}">2</a></li>
                      <li><a href="{{ path('app_products', {'page': 3}) }}">3</a></li>
                      <li class="ellipsis">...</li>
                      <li><a href="{{ path('app_products', {'page': page - 1}) }}">{{ page - 1 }}</a></li>
                      {% if page == pages %}
                        <li><a href="{{ path('app_products', {'page': page}) }}" class="active">{{ page }}</a></li>
                      {% else %}
                        <li><a href="{{ path('app_products', {'page': page}) }}" class="active">{{ page }}</a></li>
                        <li><a href="{{ path('app_products', {'page': page + 1}) }}">{{ page + 1 }}</a></li>
                        <li class="ellipsis">...</li>
                      {% endif %}
                    {% endif %}
                  {% else %}
                    {% for i in 1..pages %}
                      {% if i == page %}
                        <li><a href="{{ path('app_products', {'page': i}) }}" class="active">{{ i }}</a></li>
                      {% else %}
                        <li><a href="{{ path('app_products', {'page': i}) }}">{{ i }}</a></li>
                      {% endif %}
                    {% endfor %}
                  {% endif %}

                  <li>
                    {% if page != pages %}
                    <a href="{{ path('app_products', {'page': page + 1}) }}" aria-label="Next page">
                    {% else %}
                    <a href="{{ path('app_products', {'page': page}) }}" aria-label="Next page" class="disabled">
                    {% endif %}
                      <span class="d-none d-sm-inline">Next</span>
                      <i class="bi bi-arrow-right"></i>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>

          </section><!-- /Category Pagination Section -->

        </div>

      </div>
    </div>

  </main>

{% endblock %}