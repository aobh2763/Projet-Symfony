<section id="best-sellers" class="best-sellers section">
    <div class="container section-title" data-aos="fade-up">
        <h2>Best Sellers</h2>
        <p>Top performing tactical equipment this season</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row g-4">
            {% for product in bestsellers %}
                <div class="col-6 col-lg-3">
                    <div class="product-card" data-aos="zoom-in" data-aos-delay="{{ loop.index0 * 100 }}">
                        <div class="product-image">
                            <img src="{{ asset(product.main_image) }}" class="main-image img-fluid" alt="{{ product.name }}">
                            <img src="{{ asset(product.hover_image) }}" class="hover-image img-fluid" alt="{{ product.name }}">
                            <div class="product-overlay">
                                <div class="product-actions">
                                    <button type="button" class="action-btn" data-bs-toggle="tooltip" title="Quick View">
                                        <i class="bi bi-eye"></i>
                                    <button type="button"
                                            class="action-btn"
                                            data-bs-toggle="tooltip"
                                            title="Add to Cart">
                                        <i class="bi bi-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                            {% if product.badge %}
                                <div class="product-badge {{ product.badge }}">{{ product.badge == 'sale' ? 'Sale' : 'New' }}</div>
                            {% endif %}
                        </div>
                        <div class="product-details">
                            <div class="product-category">{{ product.category }}</div>
                            <h4 class="product-title">
                                <a href="{{ path('app_product_details', {'pid': 200}) }}">{{ product.name }}</a>
                            </h4>
                            <div class="product-meta">
                                <div class="product-price">
                                    ${{ product.price|number_format(2) }}
                                    {% if product.original_price %}
                                        <span class="original-price">${{ product.original_price|number_format(2) }}</span>
                                    {% endif %}
                                </div>
                                <div class="product-rating">
                                    <i class="bi bi-star-fill"></i>
                                    {{ product.rating }} <span>({{ product.reviews }})</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
