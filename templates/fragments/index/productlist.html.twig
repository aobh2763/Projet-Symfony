<section id="category-product-list" class="category-product-list section">
    <h2 class="text-center mb-4 mt-5">Products</h2>

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            <!-- Product -->
            {% for product in products %}
            <div class="col-lg-4">
                <div class="product-box">
                    <div class="product-thumb">
                        {% if product.stock == 0 %}
                        <span class="product-label product-label-sold">Sold Out</span>
                        {% elseif product.sale > 0 %}
                        <span class="product-label product-label-sale">-{{ (product.sale * 100)|round(0, 'floor') }}%</span>
                        {% endif %}
                        
                        <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="main-img" loading="lazy">
                        <div class="product-overlay">
                            <div class="product-quick-actions">
                                <a href="{{ path('app_user_wishlist_add', {'pid': product.id}) }}" type="button" class="quick-action-btn">
                                    <i class="bi bi-heart"></i>
                                </a>
                                <a href="{{ path('app_product_details', {'pid': product.id}) }}" type="button" class="quick-action-btn">
                                    <i class="bi bi-arrow-repeat"></i>
                                </a>
                            </div>
                            {% if product.stock == 0 %}
                            <div class="add-to-cart-container">
                                <button type="button" class="add-to-cart-btn disabled">Sold Out</button>
                            </div>
                            {% else %}
                            <div class="add-to-cart-container">
                                <a href="{{ path('app_user_cart_add', {'pid': product.id, 'qte': 1}) }}">
                                    <button type="button" class="add-to-cart-btn">Add to Cart</button>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="product-content">
                        <div class="product-details">
                            <h3 class="product-title">
                                <a href="{{ path('app_product_details', {'pid': product.id}) }}">{{ product.name }}</a>
                            </h3>
                            {% if product.sale > 0 %}
                            <div class="product-price">
                                <span class="original">${{ product.price|number_format(2, '.', '') }}</span>
                                <span class="sale">${{ (product.price * (1 - product.sale))|number_format(2, '.', '') }}</span>
                            </div>
                            {% else %}
                            <div class="product-price">
                                <span>${{ product.price|number_format(2, '.', '') }}</span>
                            </div>
                            {% endif %}
                        </div>
                        <div class="product-rating-container">
                            <div class="rating-stars">
                                {% set stars = product.rating|round(0, 'floor') %}
                                {% set has_half = (product.rating - stars) >= 0.5 %}
                                {% set empty_stars = 5 - stars - (has_half ? 1 : 0) %}
                                
                                {% for i in 1..stars %}
                                    <i class="bi bi-star-fill"></i>
                                {% endfor %}
                                {% if has_half %}
                                    <i class="bi bi-star-half"></i>
                                {% endif %}
                                {% for i in 1..empty_stars %}
                                    <i class="bi bi-star"></i>
                                {% endfor %}
                            </div>
                            <span class="rating-number">{{ product.rating|number_format(1, '.', '') }}</span>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
            <!-- End Product -->
 </div>
<div class="text-center mt-4" data-aos="fade-up">
    <a href="{{ path('app_products') }}" class="btn btn-lg btn-primary px-4 py-2 rounded-pill shadow-sm view-all-btn d-inline-flex align-items-center gap-2">
        View All Products <i class="bi bi-arrow-right fs-5"></i>
    </a>
</div>

    </div>

</section>